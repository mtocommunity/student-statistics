{
  "name": "student-statistics",
  "type": "module",
  "license": "GPL-3.0-only",
  "description": "A web application for managing student statistics.",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build && mv dist/*.png dist/client/ && mv dist/*.ico dist/client/",
    "preview": "astro preview",
    "astro": "astro",
    "start": "node dist/server/entry.mjs",
    "format": "prettier --write .",
    "lint": "eslint . --ext .astro,.js,.jsx,.ts,.tsx,.mdx --fix",
    "husky": "husky",
    "db:push": "drizzle-kit generate && bun scripts/migrate.ts"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/node": "9.2.2",
    "@astrojs/preact": "4.1.0",
    "@hookform/resolvers": "5.1.1",
    "@svgr/rollup": "8.1.0",
    "@tabler/icons": "3.34.0",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/vite": "4.1.10",
    "@types/bun": "1.2.16",
    "@vite-pwa/assets-generator": "1.0.0",
    "@vite-pwa/astro": "1.1.0",
    "astro": "5.9.4",
    "astro-compress": "2.3.8",
    "clsx": "2.1.1",
    "drizzle-kit": "0.31.1",
    "drizzle-orm": "0.44.2",
    "drizzle-zod": "0.8.2",
    "preact": "10.26.9",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-hook-form": "7.58.1",
    "sonner": "2.0.5",
    "tailwind-merge": "3.3.1",
    "tailwind-variants": "1.0.0",
    "tailwindcss": "4.1.10",
    "tw-animate-css": "1.3.4"
  },
  "devDependencies": {
    "@eslint/js": "9.29.0",
    "@typescript-eslint/parser": "8.34.1",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "eslint-scope": "8.4.0",
    "husky": "9.1.7",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-astro-organize-imports": "0.4.11",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-tailwindcss": "0.6.12",
    "typescript": "5.8.3",
    "typescript-eslint": "8.34.1"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,astro,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
