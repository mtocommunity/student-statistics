{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Student Statistics (Server) ğŸ",
      "request": "launch",
      "type": "bun",
      "program": "dev",
      "args": ["--host"],
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Student Statistics (Browser - Chrome) ğŸ",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4321",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Student Statistics (Server + Browser) ğŸ",
      "configurations": [
        "Student Statistics (Server) ğŸ",
        "Student Statistics (Browser - Chrome) ğŸ"
      ],
      "stopAll": true
    }
  ]
}
